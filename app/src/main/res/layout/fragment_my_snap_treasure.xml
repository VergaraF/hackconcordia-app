<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".ui.adapter.MySnapTreasuresFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_my_snap_treasure_points"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/fragment_1_title"/>

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_my_snap_treasure_list"
        android:name="sjcf.hackconcordia.com.hackconcordia.ui.fragment.MySnapTreasuresFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/fragment_my_snap_treasure_item" />

</LinearLayout>
