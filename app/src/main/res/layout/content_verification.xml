
<LinearLayout xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/content_verification_image"
        android:layout_weight="0.6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/content_verification_taken_by"
        android:layout_weight="0.3" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:id="@+id/content_verification_verify"
        android:layout_weight="0.09"
        android:text="Verify Picture"
        android:textColor="@color/colorWhite"
        android:textSize="21dp"
        android:background="@color/colorAccent"/>
</LinearLayout>
